<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/pick_background"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EnglishQuiz">
    <!--android:background="#e8f7f5"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/vocaprogress"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0/5"
            android:textSize="30sp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/vocascoreText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="점수"
                android:textSize="20sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/vocascore"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="0"
                android:textSize="40sp"
                android:gravity="center"/>

        </LinearLayout>



    </LinearLayout>

    <TextView
        android:id="@+id/vocadef"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="50sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/vocaword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="50sp"
            android:text="h e _ l o"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/vocaselect1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="a"
            android:textSize="50sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/vocaselect2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="b"
            android:textSize="50sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/vocaselect3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="c"
            android:textSize="50sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/vocaselect4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="d"
            android:textSize="50sp"
            android:gravity="center"/>


    </LinearLayout>


</LinearLayout>

